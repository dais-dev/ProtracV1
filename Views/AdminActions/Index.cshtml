


@model IEnumerable<UserRolesViewModel>

<table>
<thead>
<tr>
<th>UserName</th>    
<th>Email</th>
<th>Roles</th>
</tr>
</thead>
<tbody>
@foreach (var user in Model)
{
<tr>
<td>@user.UserName</td>

<td>@string.Join(", ", user.Roles)</td>

<td>
                <a asp-action="ListUsers" >Edit </a> |
                <a asp-action="ListUsers" > Delete </a>
</td>
</tr>
}
</tbody>
</table>
